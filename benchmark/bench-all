#!/usr/local/bin/bash

RODIR=/disk/`traz-cfg user`/readonly
RWDIR=/disk/`traz-cfg user`/readwrite
FLUSH_SIZE_MB=0
SPREADDIRS=100
DIRREPS=10000
FILEREPS=10000
FILESIZE=1024
IPCTRANSFER=4096
IPCMSGS=1000000
NULLMSGS=1000000

DATE=`date +%Y%m%d%H%M`
OUTPUTDIR=$DATE-data

echo "Saving stats to directory $OUTPUTDIR"

mkdir $OUTPUTDIR
#sh bench-lfs $OUTPUTDIR $TMPDIR $FLUSH_SIZE_MB $SPREADDIRS $DIRREPS $FILEREPS $FILESIZE
sh bench-syscalls $OUTPUTDIR $RODIR $RWDIR $FLUSH_SIZE_MB $SPREADDIRS $DIRREPS $FILEREPS
#sh bench-ipc $OUTPUTDIR $IPCTRANSFER $IPCMSGS $NULLMSGS
